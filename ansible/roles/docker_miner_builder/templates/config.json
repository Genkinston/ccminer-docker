{
    "pools":[
    {
            "name": "{{ docker_miner_builder_name_first }}",
    "url": "{{ docker_miner_builder_url_first  }}",
            "timeout": 150
    },
    {
            "name": "{{ docker_miner_builder_name_second }}",
    "url": "{{ docker_miner_builder_url_second }}",
            "timeout": 60,
            "time-limit": 600
    }],

    "user": "{{ docker_miner_builder_wallet }}.{{ docker_miner_builder_rig_name }}",
    "algo": "verus",
    "threads": "{{ docker_miner_builder_threads }}",
    "cpu-priority": 1,
    "retry-pause": 5,
    "api-allow": "192.168.0.0/16",
    "api-bind": "0.0.0.0:4068"
}
